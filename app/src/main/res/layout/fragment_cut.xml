<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:text="@string/transfer_between_currencies_in_the_pass_through_account"
        android:textColor="@color/text_normal"
        android:textSize="@dimen/dp_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cut_by"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/tv_cut_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="USDT"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_15" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/cut_conversion_become"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/tv_cut_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="ACN"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_15" />


        <TextView
            android:id="@+id/tv_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/huazhuan"
            android:drawablePadding="@dimen/dp_2"
            android:padding="@dimen/dp_15"
            android:text="@string/cut_cut"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cut_account_balance"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_15" />


        <TextView
            android:id="@+id/tb_all_conversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dp_15"
            android:text="@string/cut_all_conversion"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_15" />
    </LinearLayout>

    <TextView
        style="@style/font_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/cut_transfer_number"
        android:textColor="@color/text_normal" />

    <EditText
        android:id="@+id/et_coinToOTC_transferQuantity"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_black"
        android:hint="@string/cut_please_enter_the_number_of_paddles"
        android:inputType="numberDecimal"
        android:minHeight="@dimen/dp_32"
        android:singleLine="true" />

    <TextView
        android:id="@+id/et_coinToOTC_transferQuantity_error"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_red" />

    <TextView
        style="@style/font_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="划转换算"
        android:textColor="@color/text_normal" />

    <EditText
        android:id="@+id/et_coinToOTC_cut"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_black"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberDecimal"
        android:minHeight="@dimen/dp_32"
        android:singleLine="true"
        android:text="@string/cut_please_enter_transfer_conversion" />

    <TextView
        android:id="@+id/et_coinToOTC_cut_error"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_red" />

    <TextView
        style="@style/font_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/trade_pwd"
        android:textColor="@color/text_normal" />

    <EditText
        android:id="@+id/et_mycenter_otc_accountpwd"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_black"
        android:hint="@string/trade_pwd_hit"
        android:inputType="textPassword"
        android:minHeight="@dimen/dp_32"
        android:singleLine="true" />

    <TextView
        android:id="@+id/et_mycenter_otc_accountpwd_error"
        style="@style/font_size_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_red" />

    <Button
        android:id="@+id/bt_coinToOTC_submit"
        style="@style/button_shadeless_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_style_blue"
        android:minHeight="44dp"
        android:text="@string/config"
        android:textColor="@color/text_white" />


</LinearLayout>

