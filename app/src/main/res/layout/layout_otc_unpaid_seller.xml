<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_15"
    android:paddingStart="@dimen/dp_15">


    <!-- 付款人 -->
    <RelativeLayout style="@style/common_item_holder_height70">

        <TextView
            android:id="@+id/tv_otc_order_payer_text"
            style="@style/otc_item_text"
            android:text="@string/payer" />

        <TextView
            android:id="@+id/tv_otc_order_payer"
            style="@style/otc_item_value"
            android:layout_below="@id/tv_otc_order_payer_text" />

        <ImageView
            android:id="@+id/iv_otc_order_payer_copy"
            style="@style/otc_copy_icon" />
    </RelativeLayout>

    <View style="@style/common_separator_horizontal" />


    <!-- 因为 订单号/付款参考号 和 "买家" 中的部分重复了, 导致 findViewById 出了问题，
        因此就这里的部分就重新命名 id。
     -->


    <!-- 订单号 -->
    <RelativeLayout style="@style/common_item_holder_height70">

        <TextView
            android:id="@+id/tv_otc_order_number_4seller_text"
            style="@style/otc_item_text"
            android:text="@string/order_number" />

        <TextView
            android:id="@+id/tv_otc_order_number_4seller"
            style="@style/otc_item_value"
            android:layout_below="@id/tv_otc_order_number_4seller_text" />

        <ImageView
            android:id="@+id/iv_otc_order_number_4seller_copy"
            style="@style/otc_copy_icon" />
    </RelativeLayout>

    <View style="@style/common_separator_horizontal" />


    <!-- 付款参考号 -->
    <RelativeLayout style="@style/common_item_holder_height70">

        <TextView
            android:id="@+id/tv_otc_order_refer_4seller_text"
            style="@style/otc_item_text"
            android:text="@string/payment_refer" />

        <TextView
            android:id="@+id/tv_otc_order_refer_4seller"
            style="@style/otc_item_value"
            android:layout_below="@id/tv_otc_order_refer_4seller_text" />

        <ImageView
            android:id="@+id/iv_otc_order_refer_4seller_copy"
            style="@style/otc_copy_icon" />
    </RelativeLayout>

    <View style="@style/common_separator_horizontal" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/explanation_for_seller"
        android:textColor="@color/text_light"
        style="@style/font_size_13" />

</LinearLayout>
