<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_member_purchase"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_173"
                android:scaleType="fitXY"
                android:src="@drawable/bg_vip" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_member_purchase_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_64"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_35"
                android:clipChildren="false" />
        </RelativeLayout>

        <TextView
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/vip_current_benefits"
            android:textColor="@color/text_normal" />

        <!-- 权益 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <LinearLayout
                android:id="@+id/ll_member_purchase_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_1" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit1"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_1"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_2" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit2"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_2"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_3" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit3"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_3"
                        android:textColor="@color/text_grey" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_member_purchase_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_member_purchase_row1"
                android:layout_marginTop="@dimen/dp_20"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_4" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit4"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_4"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_5" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit5"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_5"
                        android:textColor="@color/text_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:src="@drawable/icon_vip_profit_7" />

                    <TextView
                        android:id="@+id/tv_member_purchase_benefit7"
                        style="@style/font_size_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/vip_benefit_6"
                        android:textColor="@color/text_grey" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ll_member_purchase_row2"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_55"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_vip_profit_6" />

                    <TextView
                        style="@style/font_size_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/vip_benefit_or"
                        android:textColor="#F2BF0F" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15">

            <Button
                android:id="@+id/btn_member_purchase_buy"
                style="@style/button_shadeless_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@drawable/rounded_gradient_dark_yellow"
                android:text="@string/vip_submit_price"
                android:textColor="#FEFEFE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_member_purchase_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:button="@drawable/check_vip_agreement"
                    android:checked="true" />

                <TextView
                    android:id="@+id/tv_member_purchase_agreement"
                    style="@style/font_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_toEndOf="@id/cb_member_purchase_agreement"
                    android:text="@string/vip_ensure_agreement"
                    android:textColor="@color/text_light" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
