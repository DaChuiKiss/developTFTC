<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/color_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mycenter_order_name"
                style="@style/font_size_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/tv_mycenter_order_time"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:text="jack"
                android:textColor="@color/text_grey" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:orientation="horizontal">

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/orderItem1"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/orderItem2"
                android:textColor="@color/text_normal" />

            <TextView

                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="@string/orderItem3"
                android:textColor="@color/text_normal" />

            <TextView

                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:paddingRight="@dimen/dp_12"
                android:text="@string/orderItem4"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/item_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mycenter_order_coin_price"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_mycenter_order_coin_count"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:maxLength="12"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_mycenter_order_coin_reachedCount"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:maxLength="12"
                android:textColor="@color/text_grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right">

                <TextView
                    android:id="@+id/tv_mycenter_order_coin_entrustStatus"
                    style="@style/font_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_50"
                    android:minHeight="@dimen/dp_20"
                    android:textColor="@color/text_grey" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>