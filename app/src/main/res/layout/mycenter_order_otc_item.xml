<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_mycenter_order_name"
                style="@style/font_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="jack"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/tv_mycenter_order_time"
                style="@style/font_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_11"
                android:layout_toEndOf="@id/tv_mycenter_order_name"
                android:text="jack"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_mycenter_order_sataus"
                style="@style/font_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:drawableEnd="@mipmap/goto_next"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:text="jack"
                android:textColor="@color/text_grey" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/otc_price"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/otc_count"
                android:textColor="@color/text_normal" />

            <TextView

                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="@string/otc_amount"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/item_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mycenter_order_otc_price"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="单价 ￥6.5"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/mycenter_order_otc_count"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="单价 ￥6.5"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/mycenter_order_otc_account"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center"
                android:text="单价 ￥6.5"
                android:textColor="@color/text_grey" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_mycenter_order_otc_userName"
                style="@style/font_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="18"
                android:singleLine="true"
                android:text="张三"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_mycenter_order_otc_number"
                style="@style/font_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="订单编号:18001"
                android:textColor="@color/text_grey" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>