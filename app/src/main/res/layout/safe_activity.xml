<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_50"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:id="@+id/safe_rl_1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_phone"
            android:drawableLeft="@mipmap/safe_1"
            android:gravity="center|left"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_grey"
            android:id="@+id/tv_mycenter_safe_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="8dp"
            android:drawablePadding="@dimen/dp_10"
            android:minHeight="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/line"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >

    </TextView>
    <RelativeLayout
        android:id="@+id/safe_rl_2"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_44"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_email"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_normal"
            android:drawableLeft="@mipmap/safe_2"
            android:gravity="center|left"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/text_grey"
            android:id="@+id/tv_mycenter_safe_email"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="8dp"
            android:minHeight="15dp"
            android:drawablePadding="@dimen/dp_10"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/line"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >

    </TextView>
    <RelativeLayout
        android:id="@+id/safe_rl_3"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_44"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_google"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/safe_3"
            android:drawablePadding="5dp"
            android:textColor="@color/text_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mycenter_safe_google"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="8dp"
            android:minHeight="15dp"
            android:textColor="@color/text_grey"
            android:drawableRight="@mipmap/goto_next"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        style="@style/line"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >

    </TextView>
    <RelativeLayout
        android:id="@+id/safe_rl_4"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_44"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_login_pwd"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/safe_4"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mycenter_safe_pwd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="8dp"
            android:textColor="@color/text_grey"
            android:text="@string/goto_update"
            android:drawablePadding="@dimen/dp_10"
            android:minHeight="15dp"
            android:drawableRight="@mipmap/goto_next"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
    android:layout_width="match_parent"
    style="@style/line"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    >

</TextView>
    <RelativeLayout
        android:id="@+id/safe_rl_5"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_44"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_amount_pwd"
            android:drawableLeft="@mipmap/safe_5"
            android:gravity="center|left"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_normal"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mycenter_safe_accountpwd"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:minWidth="8dp"
            android:minHeight="15dp"
            android:textColor="@color/text_grey"
            android:text="@string/goto_update"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@mipmap/goto_next"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        style="@style/line"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >

    </TextView>

    <RelativeLayout
        android:id="@+id/safe_rl_6"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:minHeight="@dimen/dp_44"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/safe_patternLocker"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/safe_6"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_normal"
            android:layout_height="wrap_content" />

        <CheckBox
            style="@style/lock_checkbox"
            android:id="@+id/openPatternLocker"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
