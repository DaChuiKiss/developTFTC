<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_hkd_id"
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_45"
            android:text="HKD"
            android:textColor="@color/text_normal" />

        <View style="@style/common_separator_horizontal" />

        <TextView
            android:id="@+id/tv_cny_id"
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_45"
            android:text="CNY"
            android:textColor="@color/text_normal"
            android:visibility="gone" />

        <View
            style="@style/common_separator_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_aud_id"
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_45"
            android:text="AUD"
            android:textColor="@color/text_normal"
            android:visibility="gone" />


        <View
            style="@style/common_separator_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_usdt_id"
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_45"
            android:text="USD"
            android:textColor="@color/text_normal"
            android:visibility="gone" />


    </LinearLayout>
</LinearLayout>