<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <RelativeLayout
                android:id="@+id/rl_1"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/system1"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system1"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:minWidth="8dp"
                    android:minHeight="15dp"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_2"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@mipmap/system2"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system2"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_3"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/system4"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system3"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_4"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/system3"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system4"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_mycenter_setting_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_5"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/system5"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system5"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_cacheSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="0.00M"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_6"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/system6"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system6"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/mycenter_setting_coinType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/item_separator">

            </TextView>

            <RelativeLayout
                android:id="@+id/rl_7"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/system7"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center|left"
                    android:text="@string/system7"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_app_vsersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_grey" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/bt_mycenter_system_logout"
            style="@style/font_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/bg_white"
            android:gravity="center"
            android:minHeight="@dimen/dp_44"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/text_normal" />
    </LinearLayout>
</ScrollView>