    <RelativeLayout
android:visibility="gone"
        android:id="@+id/rl_myacount_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/dp_71"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/total_account"
            style="@style/font_size_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/total_account"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/total_account"
            android:textColor="@color/text_blue" />

        <TextView
            android:id="@+id/tv_myaccount_btc"
            style="@style/font_size_17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/total_account"
            android:text="0.00000000"
            android:textColor="@color/text_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_myaccount_price"
            style="@style/font_size_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/total_account"
            android:layout_margin="6dp"
            android:text="0.00"
            android:textColor="@color/text_blue" />
    </RelativeLayout>


