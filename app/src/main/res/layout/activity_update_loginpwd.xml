<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                style="@style/marge_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_68">

                <TextView
                    style="@style/TextStyle"
                    android:layout_height="wrap_content"
                    android:text="@string/old_login_pwd" />

                <EditText
                    android:id="@+id/et_update_loginpwd_oldpwd"
                    style="@style/EditTextStyle"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/pwd_hit"
                    android:inputType="textPassword" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_update_loginpwd_oldpwd_error"
                style="@style/error_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                style="@style/marge_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextStyle"
                    android:layout_height="match_parent"
                    android:text="@string/new_login_pwd" />

                <EditText
                    android:id="@+id/et_update_loginpwd_newpwd"
                    style="@style/EditTextStyle"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/pwd_hit"
                    android:inputType="textPassword" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_update_loginpwd_newpwd_error"
                style="@style/error_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                style="@style/marge_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextStyle"
                    android:layout_height="match_parent"
                    android:text="@string/config_login_pwd" />

                <EditText
                    android:id="@+id/et_update_loginpwd_againpwd"
                    style="@style/EditTextStyle"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/pwd_hit"
                    android:inputType="textPassword" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_update_loginpwd_againpwd_error"
                style="@style/error_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                style="@style/marge_left_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextStyle"
                    android:layout_height="wrap_content"
                    android:text="@string/code_no" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_update_loginpwd_code"
                        style="@style/font_size_14"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:hint="@string/codeEdit"
                        android:textColor="@color/text_normal"
                        android:textColorHint="@color/text_grey"
                        android:inputType="number"
                        android:minWidth="@dimen/dp_210"
                        android:minHeight="25dp"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/getCode"
                        style="@style/button_shadeless_style"
                        android:layout_width="@dimen/dp_125"
                        android:layout_height="@dimen/dp_35"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/et_withdraw_code"
                        android:background="@drawable/bt_style_blue"
                        android:text="@string/code"
                        android:textColor="@color/text_white"
                       />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_update_loginpwd_code_error"
                style="@style/error_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_update_loginpwd_submit"
                style="@style/button_shadeless_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_48"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bt_style_blue"
                android:text="@string/update"
                android:textColor="@color/text_white"
                 />

        </LinearLayout>
    </ScrollView>

</LinearLayout>