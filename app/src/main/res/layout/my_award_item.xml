<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_black"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center">


        <TextView
            android:gravity="center"
            android:id="@+id/tv_invitedAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00000002"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:gravity="center"
            android:id="@+id/tv_antiCommission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00000002"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:gravity="center"
            android:id="@+id/tv_coinName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00000002"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_commission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.00000002"
            android:textColor="@color/pickerview_topbar_title"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

</LinearLayout>