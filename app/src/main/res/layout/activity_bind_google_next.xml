<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar"></include>


     <LinearLayout
                android:layout_marginTop="@dimen/dp_23"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center|left"
                    android:textColor="@color/text_normal"
                    style="@style/font_size_17"
                    android:text="@string/notice5"
                    android:layout_height="wrap_content" />
     </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_19"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/text_normal"
            style="@style/font_size_17"
            android:text="@string/notice6"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/text_blue"
            style="@style/font_size_17"
            android:text="163@163.com"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_19"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:gravity="center"
        android:layout_height="wrap_content">
        <EditText

            android:id="@+id/et_mycenter_google_pwd1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:minWidth="@dimen/dp_40"
            android:background="@drawable/bt_style_white"
            android:minHeight="@dimen/dp_40"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_mycenter_google_pwd2"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@drawable/bt_style_white"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_40"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_mycenter_google_pwd3"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_6"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_40"
            android:background="@drawable/bt_style_white"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_mycenter_google_pwd4"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_6"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_40"
            android:background="@drawable/bt_style_white"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_mycenter_google_pwd5"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_6"
            android:minWidth="@dimen/dp_40"
            android:background="@drawable/bt_style_white"
            android:minHeight="@dimen/dp_40"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_mycenter_google_pwd6"
            android:inputType="number"
            android:maxLength="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_6"
            android:background="@drawable/bt_style_white"
            android:minWidth="@dimen/dp_40"
            android:minHeight="@dimen/dp_40"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        style="@style/button_shadeless_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/bt_style_blue"
        android:minHeight="@dimen/dp_41"
        android:text="@string/config"
        android:textColor="@color/text_white"
        android:textSize="20sp" />


</LinearLayout>