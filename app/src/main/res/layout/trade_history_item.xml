<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    android:minHeight="@dimen/dp_105"
    android:paddingTop="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_trade_history_name"
                style="@style/font_size_14"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|left"
                android:textColor="@color/text_normal" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_trade_history_time"
                style="@style/font_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:text="jack"
                android:textColor="@color/text_grey" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_19"

            android:orientation="horizontal">

            <TextView

                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/orderItem1"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|right"
                android:text="@string/orderItem2"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/tv_show_history_detail"
                style="@style/font_size_15"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:drawableRight="@mipmap/show"
                android:textColor="@color/text_normal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trade_history_entrustPrice"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|left"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_trade_history_entrustCount"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center|right"
                android:maxLength="12"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_trade_history_reachedCount"
                style="@style/font_size_12"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:maxLength="12"
                android:textColor="@color/text_grey" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_history_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginRight="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_9"
                android:background="@color/color_bg" />


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/average_valence"
                    android:textColor="#ff333333"
                    style="@style/font_size_15" />

                <TextView
                    android:id="@+id/tv_history_avgReachedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="240.21"
                    android:textColor="#ff999999"
                    style="@style/font_size_13" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/volume"
                    android:textColor="#ff333333"
                    style="@style/font_size_15" />

                <TextView
                    android:id="@+id/tv_history_reachedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="240.21"
                    android:textColor="#ff999999"
                    style="@style/font_size_13" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/turnover_price"
                    android:textColor="#ff333333"
                    style="@style/font_size_15" />

                <TextView
                    android:id="@+id/tv_history_turnover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="240.21"
                    android:textColor="#ff999999"
                    style="@style/font_size_13" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>