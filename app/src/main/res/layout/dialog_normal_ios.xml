<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_r10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="会员支付"
        android:textColor="@color/text_normal"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dialog_normal_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:text="content"
        android:textColor="@color/text_normal"
        style="@style/font_size_13" />

    <EditText
        android:id="@+id/et_dialog_normal_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/rectangle_borders_grey"
        android:textColor="@color/text_normal"
        android:textColorHint="@color/text_grey"
        style="@style/font_size_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@color/item_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_normal_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Cancle"
            android:textColor="@color/text_normal"
            style="@style/font_size_15" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/item_separator" />

        <TextView
            android:id="@+id/tv_dialog_normal_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/OK"
            android:textColor="@color/text_blue"
            style="@style/font_size_15" />

    </LinearLayout>

</LinearLayout>