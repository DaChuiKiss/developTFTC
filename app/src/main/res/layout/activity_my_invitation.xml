<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    tools:context="oysd.com.trade_app.modules.mycenter.view.MyInvitationActivity">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/tv_my_award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:padding="@dimen/dp_15">

                <TextView

                    style="@style/font_size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:text="@string/the_cumulative_invited"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_person"
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/tv_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blue" />


                <TextView
                    android:id="@+id/tv_right"
                    style="@style/font_size_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/person"
                    android:textColor="@color/text_normal" />


            </RelativeLayout>

            <!-- item separator -->
            <View
                style="@style/line"
                android:layout_width="match_parent" />

            <TextView
                style="@style/font_size_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:padding="@dimen/dp_15"
                android:text="@string/activity_rules"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/tv_html"
                style="@style/font_size_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:textColor="@color/text_normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_1"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_2"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_3"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_4"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_5"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_6"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:text="@string/my_invitation_7"
                android:textColor="@color/text_light"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_copy_invitation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_100"
                android:padding="@dimen/dp_10">

                <TextView
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invitation_code"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_invitation_code"
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/copy_image" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_copy_recommended_links"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10">

                <TextView
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recommended_links"
                    android:textColor="@color/text_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_recommended_links"
                        style="@style/font_size_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/blue" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:src="@mipmap/copy_image" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
