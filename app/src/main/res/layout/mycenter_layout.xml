<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="@dimen/dp_180"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_45">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/my_head_nonvip" />

            <TextView
                android:id="@+id/tv_mycenter_phone"
                style="@style/font_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/head"
                android:drawablePadding="1dp"
                android:text="18682199321"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_mycenter_id"
                style="@style/font_size_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_mycenter_phone"
                android:layout_alignStart="@id/tv_mycenter_phone"
                android:text="ID: 10000"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_mycenter_vipLeve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_mycenter_phone"
                android:layout_alignBottom="@id/tv_mycenter_phone"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_mycenter_phone"
                android:background="@drawable/bg_vip_type"
                android:gravity="center"
                android:includeFontPadding="false"
                android:minWidth="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_7"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_3"
                android:text="终生卡"
                android:textColor="#ff1e82d2"
                android:textSize="9sp"
                android:visibility="gone" />
            <!-- android:drawableRight="@mipmap/vip"-->

            <LinearLayout
                android:id="@+id/tv_mycenter_systemSetting"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:gravity="center|right"
                android:paddingRight="15dp">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/my_setting" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_mycenter_goto_myaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <TextView
                style="@style/font_size_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:gravity="center"
                android:text="@string/Total_funds"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/tv_mycenter_account_btc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.000000"
                android:textColor="#FBA032"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mycenter_account_rmb"
                style="@style/font_size_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="≈0.00CNY"
                android:textColor="@color/text_white" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <!--android:minWidth="355dp"-->
        <!--android:minHeight="355dp"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg_white"

            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_1"
                style="@style/marge_left_right_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@mipmap/my_member_center"
                    android:drawablePadding="15dp"
                    android:gravity="center|left"
                    android:text="@string/vip_center"
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_mycenter_loseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/goto_next"
                    android:drawablePadding="@dimen/dp_10"
                    android:minWidth="8dp"
                    android:minHeight="15dp"
                    android:text="@string/open_vip"
                    android:textColor="#fffba032" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_bg"
                android:visibility="gone" />

            <RelativeLayout
