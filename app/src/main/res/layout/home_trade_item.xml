<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_trade_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:background="@drawable/line_black"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_home_rank"
        android:text="1"
        android:textColor="@color/text_white"
        android:gravity="center"
        style="@style/font_size_11"
        android:background="@mipmap/paixu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coinName"
            style="@style/font_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/volum_24h"
            style="@style/font_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="24h:0.00"
            android:visibility="gone"
            android:textColor="@color/text_grey"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coinUSDTprice"
            style="@style/font_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00000000"
            android:maxLength="12"
            android:gravity="center|left"
            android:textColor="@color/text_normal" />

        <TextView
            android:id="@+id/coinRMBprice"
            style="@style/font_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="0.00"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center|right"
        >
    <TextView
        android:id="@+id/coin_chg"
        style="@style/font_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:minHeight="@dimen/dp_33"
        android:minWidth="@dimen/dp_80"
        android:text="+2.55%"
        android:textColor="@color/text_pink" />
    </LinearLayout>

</LinearLayout>