<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center_horizontal"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_137"
        android:layout_width="wrap_content"
        android:background="@drawable/img_no_data"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/wait"
        style="@style/font_size_15"
        android:textColor="@color/text_light"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_8"
        style="@style/font_size_15"
        android:text="@string/information_note"
        android:textColor="@color/text_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_back_home"
        style="@style/button_shadeless_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/information_black_style"
        android:gravity="center"
        android:minWidth="@dimen/dp_125"
        android:minHeight="@dimen/dp_35"
        android:text="@string/return2"
        android:textColor="@color/text_blue"
        />

</LinearLayout>
