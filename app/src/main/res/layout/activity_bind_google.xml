<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23">

        <TextView
            style="@style/TextStyle"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center|left"
            android:text="@string/notice4" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_style"
            android:minWidth="@dimen/dp_153"
            android:minHeight="@dimen/dp_153" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2">

        <TextView
            style="@style/TextStyle"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/notice2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="KBTHHBJ"
            android:textColor="@color/text_red" />

        <Button
            style="@style/button_shadeless_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_19"
            android:background="@drawable/rectangle_grey"
            android:minWidth="@dimen/dp_57"
            android:minHeight="@dimen/dp_20"
            android:text="@string/copy" />
    </LinearLayout>


    <Button
        android:id="@+id/bt_mycenter_google_update"
        style="@style/button_shadeless_style"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bt_style_blue"
        android:text="@string/update"
        android:textColor="@color/text_white"
        android:textSize="20sp" />


    <LinearLayout
        style="@style/marge_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21">

        <TextView
            style="@style/TextStyle"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/notice3" />
    </LinearLayout>

</LinearLayout>