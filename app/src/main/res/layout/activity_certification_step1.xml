<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/color_bg"
    android:layout_height="match_parent">


    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <LinearLayout
         android:background="@color/bg_white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/cert1"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/dp_22"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:paddingBottom="@dimen/dp_18"
        android:paddingTop="@dimen/dp_7">

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/my1"
            android:textColor="@color/text_blue" />

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/advanced_audit"
            android:textColor="@color/text_grey" />

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/audit"
            android:textColor="@color/text_grey" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_bg"
        android:layout_height="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_mycenter_cert1_selectCountry"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/bg_white"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_19"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:drawablePadding="5dp"
            style="@style/font_size_15"
            android:textColor="@color/text_normal"
            android:text="@string/belongCity"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_mycenter_cert_nation"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:text="@string/nation_default"
            android:textColor="@color/text_grey"
            android:gravity="center|left"
            android:minHeight="@dimen/dp_34"
            android:drawableRight="@mipmap/goto_next"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/item_separator"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="0.5dp">

    </TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_19"
        android:paddingRight="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            style="@style/font_size_15"
            android:textColor="@color/text_normal"
            android:layout_width="match_parent"
            android:text="@string/realyName"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_mycenter_cert1_name"
            android:hint="@string/realName"
            android:gravity="center|left"
            android:background="@null"
            android:textColor="@color/text_grey"
            android:minHeight="@dimen/dp_34"
            style="@style/EditTextStyle"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/item_separator"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="0.5dp">

    </TextView>





    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_mycenter_cert1_selectCertType"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/bg_white"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_19"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="@string/certificateType"
            android:drawablePadding="5dp"
            style="@style/font_size_15"
            android:textColor="@color/text_normal"
            android:gravity="center|left"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/auth_cert_type1"
            android:id="@+id/tv_mycenter_cert_type"
            android:drawableRight="@mipmap/goto_next"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_34"
            android:textColor="@color/text_grey"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/item_separator"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="0.5dp">

    </TextView>




    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_19"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            style="@style/font_size_15"
            android:textColor="@color/text_normal"
            android:layout_width="match_parent"
            android:text="@string/certificateNo"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/et_mycenter_cert1_number"
            android:hint="@string/real_card_no"
            android:gravity="center|left"
            android:textColor="@color/text_grey"
            android:background="@null"
            style="@style/EditTextStyle"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/item_separator"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="0.5dp">

    </TextView>

            <Button
                android:id="@+id/bt_mycenter_cert1_submit"
                style="@style/button_shadeless_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bt_style_blue"
                android:gravity="center"
                android:minHeight="@dimen/dp_41"
                android:text="@string/next"
                android:textColor="@color/text_white"
               />
        </LinearLayout>
    </ScrollView>
</LinearLayout>