<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/bg_white"
    android:minHeight="@dimen/dp_105">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trade_current_name"
                style="@style/font_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/text_normal" />

            <TextView
                android:id="@+id/tv_trade_current_time"
                style="@style/font_size_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="jack"
                android:textColor="@color/text_grey" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/orderItem1"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/orderItem2"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="@string/orderItem3"
                android:textColor="@color/text_normal" />

            <TextView
                style="@style/font_size_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|end"
                android:paddingEnd="@dimen/dp_12"
                android:text="@string/orderItem4"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <View
            style="@style/line"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trade_current_entrustPrice"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_trade_current_entrustCount"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:maxLength="12"
                android:textColor="@color/text_grey" />

            <TextView
                android:id="@+id/tv_trade_current_reachedCount"
                style="@style/font_size_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start"
                android:maxLength="12"
                android:textColor="@color/text_grey" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|end">

                <TextView
                    android:id="@+id/tv_trade_current_revoke"
                    style="@style/font_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle_red"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="@dimen/dp_50"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingEnd="@dimen/dp_5"
                    android:text="@string/revoke"
                    android:textColor="@color/text_red" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>