<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_otc_trade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10"
        android:background="@color/color_bg"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/ll_otc_trade_sp1"
            style="@style/font_size_15"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_28"
            android:layout_alignParentStart="true">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/sp_otc_trade_sp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_otc_trade_sp2"
            style="@style/font_size_15"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_28"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@id/ll_otc_trade_sp1">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/sp_otc_trade_sp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_otc_trade_set_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:text="@string/update_payment_method"
            android:textColor="@color/text_blue"
            style="@style/font_size_13"/>
    </RelativeLayout>


    <include layout="@layout/layout_smart_refresh" />


</LinearLayout>