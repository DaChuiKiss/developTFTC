<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_vip_popup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/popup_select_vip_level"
            android:textColor="@color/text_grey"
            style="@style/font_size_13" />

        <ImageView
            android:id="@+id/iv_vip_popup_cancel"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_vip_cancel" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_vip_popup_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15" />

    <Button
        android:id="@+id/btn_vip_popup_submit"
        style="@style/button_shadeless_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/rect_gradient_dark_yellow"
        android:text="@string/popup_confirm_payment"
        android:textColor="@color/text_white"
        />

</LinearLayout>