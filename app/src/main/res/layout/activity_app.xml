<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:gravity="center_horizontal"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_app_gift"
                android:layout_width="wrap_content"
                android:minHeight="@dimen/dp_90"
                android:gravity="center"
                android:background="@color/bg_white"
                android:minWidth="@dimen/dp_170"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/gift"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/gift"
                    android:textColor="@color/text_normal"
                    style="@style/font_size_15"
                    android:drawablePadding="@dimen/dp_25"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_app_wealth_money"
                android:layout_width="wrap_content"
                android:minHeight="@dimen/dp_90"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/bg_white"
                android:minWidth="@dimen/dp_170"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/wealth_money"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/wealth_money"
                    android:textColor="@color/text_normal"
                    style="@style/font_size_15"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_app_up_coin"
            android:layout_width="wrap_content"
            android:minHeight="@dimen/dp_90"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_white"
            android:minWidth="@dimen/dp_170"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/up_coin"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_9"
                android:text="@string/up_coin"
                android:textColor="@color/text_normal"
                style="@style/font_size_15"
                android:drawablePadding="@dimen/dp_25"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
