<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_height="match_parent">


    <include layout="@layout/title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView

        android:layout_width="wrap_content"
        android:src="@mipmap/cert3"
        android:layout_gravity="center"
        android:background="@color/bg_white"
        android:paddingTop="@dimen/dp_22"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:paddingBottom="@dimen/dp_18"
        android:paddingTop="@dimen/dp_7"
        >

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/my1"
            android:textColor="@color/text_blue" />

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/advanced_audit"
            android:textColor="@color/text_blue" />

        <TextView
            style="@style/font_size_14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/audit"
            android:textColor="@color/text_blue"
             />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_122"
        android:layout_marginTop="@dimen/dp_53"
        android:minWidth="@dimen/dp_136"
        android:minHeight="@dimen/dp_216"
        android:background="@mipmap/cert3_bg"
        android:layout_marginRight="@dimen/dp_122"
        android:layout_height="wrap_content">
    </ImageView>
    <TextView
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/text_light"
        android:text="@string/message"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_mycenter_cert3_back"
            style="@style/button_shadeless_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_37"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/bt_style_blue"
            android:minHeight="@dimen/dp_41"
            android:text="@string/backBt"
            android:textColor="@color/text_white"
         />
        </LinearLayout>
    </ScrollView>
</LinearLayout>