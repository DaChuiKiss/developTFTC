<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mycenter_ads_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="center"
            android:textColor="@color/text_light"
            style="@style/font_size_12" />

        <TextView
            android:id="@+id/tv_mycenter_ads_coinType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="center"
            android:textColor="@color/text_light"
            style="@style/font_size_12" />

        <TextView
            android:id="@+id/tv_mycenter_ads_coinPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="center"
            android:textColor="@color/text_light"
            style="@style/font_size_12"/>

        <TextView
            android:id="@+id/tv_mycenter_ads_coinCount"
            android:layout_width="0dp"
            android:maxLength="12"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="center"
            android:textColor="@color/text_light"
            style="@style/font_size_12" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">

        <Button
            android:id="@+id/bt_mycenter_ads_action"
            style="@style/button_shadeless_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/rectangle_red"
            android:gravity="center"
            android:minWidth="@dimen/dp_51"
            android:minHeight="@dimen/dp_20"
            android:text="@string/delete"
            android:textColor="@color/text_red" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_separator"
        android:paddingEnd="@dimen/dp_15"
        android:paddingStart="@dimen/dp_15" />

</LinearLayout>