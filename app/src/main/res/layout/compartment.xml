<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_173"
            android:src="@mipmap/beijing1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_compartment_totalAmount_name"
                    style="@style/font_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:alpha="0.7"
                    android:gravity="center"
                    android:text="@string/compartment_2"
                    android:textColor="#FFFEFFFF" />

                <TextView
                    android:id="@+id/tv_mycenter_compartment_totalBtcAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_compartment_totalAmount_name"
                    android:layout_alignLeft="@id/tv_compartment_totalAmount_name"
                    android:layout_marginTop="@dimen/dp_23"
                    android:text="0.0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_mycenter_compartment_totalTenderAmount"
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mycenter_compartment_totalBtcAmount"
                    android:layout_alignLeft="@id/tv_compartment_totalAmount_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="≈ 0.0USD"
                    android:textColor="#FFFFFFFF" />


                <TextView
                    android:id="@+id/tv_compartment_nearAmount_name"
                    style="@style/font_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:alpha="0.7"
                    android:text="@string/compartment_3"
                    android:textColor="#FFFEFFFF" />

                <TextView

                    android:id="@+id/tv_mycenter_compartment_date"
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_compartment_nearAmount_name"
                    android:layout_alignRight="@id/tv_compartment_nearAmount_name"
                    android:layout_marginTop="@dimen/dp_3"
                    android:alpha="0.7"
                    android:text="0.0-0.0"
                    android:textColor="#FFFEFFFF" />

                <TextView
                    android:id="@+id/tv_mycenter_compartment_btcAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mycenter_compartment_date"
                    android:layout_alignTop="@id/tv_mycenter_compartment_totalBtcAmount"
                    android:layout_alignRight="@id/tv_compartment_nearAmount_name"
                    android:text="0.0"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_mycenter_compartment_tenderAmount"
                    style="@style/font_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_mycenter_compartment_btcAmount"
                    android:layout_alignTop="@id/tv_mycenter_compartment_totalTenderAmount"
                    android:layout_alignRight="@id/tv_compartment_nearAmount_name"
                    android:text="≈ 0.0USD"
                    android:textColor="#FFFFFFFF" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg1_style"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commission_rules"
            android:textColor="#ff666666"
            style="@style/font_size_13"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/commission_rules_1"
            android:textColor="#ff666666"
            style="@style/font_size_13"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/commission_rules_2"
            android:textColor="#ff666666"
            style="@style/font_size_13" />
    </LinearLayout>
</LinearLayout>