<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="@dimen/dp_270"
    style="@style/dialog"
    android:minHeight="@dimen/dp_110"
    android:background="@drawable/password_dialog_rectangle_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="会员支付"
            android:textColor="#000000"
            style="@style/font_size_15"/>

        <TextView
            android:id="@+id/tv_dialog_input_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_12"
            android:text="请输入交易密码"
            android:textStyle="bold"
            android:textColor="@color/text_normal"
            style="@style/font_size_13" />

        <EditText
            android:id="@+id/et_dialog_input_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            style="@style/font_size_13"
            android:textColor="@color/text_normal"
            android:hint="@string/trade_pwd"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/rectangle_borders_grey"
            android:inputType="textPassword" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_50"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/dp_17"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_input_cancel"
            style="@style/button_shadeless_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rect_white"
            android:text="@string/Cancle"
            android:textColor="@color/text_normal"
            />

        <Button
            android:id="@+id/btn_dialog_input_submit"
            style="@style/button_shadeless_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_rect_bule"
            android:text="@string/OK"
            android:textColor="@color/text_blue"
             />

    </LinearLayout>

</LinearLayout>