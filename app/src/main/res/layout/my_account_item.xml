<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/line_black"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dp_45"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mycount_currency_name"
            style="@style/font_size_17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center|left"
            android:text="NYT"
            android:textColor="@color/text_blue" />

        <TextView
            android:id="@+id/mycount_currency_blance"
            style="@style/font_size_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="center|left"
            android:maxLength="12"
            android:text="0.00"
            android:textColor="@color/text_normal" />

        <!--android:drawableRight="@mipmap/goto_next"-->
        <TextView

            android:id="@+id/mycount_currency_freeze"
            style="@style/font_size_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center|right"
            android:maxLength="12"
            android:text="0.00"
            android:textColor="@color/text_normal" />

    </LinearLayout>
</LinearLayout>